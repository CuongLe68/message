        </div>

        <!-- đã login -->
        <div id="chatForm">
            <div id="left">
                <div id="boxTitle">Users Online</div>
                <div id="boxContent"></div>
            </div>
            <div id="right">
                <div id="sayHi">
                    hi, <span id="currentUser"></span>
                    <button id="btnLogout">Logout</button>
                </div>

                <div id="listMessages"></div>
